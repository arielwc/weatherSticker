{
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended",
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "eqeqeq": "error",
      "no-console": "warn",
      "prettier/prettier": "error"
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "node": true,
      "es6": true,
      "jest": true
    },
    "ignorePatterns": [
      "node_modules",
      "build",
      "dist",
      "public"
    ]
  }